%ul.articles
  -@data['results'].each do |item|
    %li
      %h2
        %a{:href => item['url']}
          #{item['title']}
      -if item['byline']
        %cite= "By #{capitalize(item['byline'])}"
      %time= "#{format_date(item['date'])}"
      %p= "#{item['body']}..."
  %li{:class=>'load'}
    %a{:"data-role" => "article-loader", :class => "load-more", :href => "/articles?search=#{params[:search]}&offset=#{params[:offset].to_i + 1}"} Load more
